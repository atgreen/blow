# Uncomment this if we want to force BLOWHOME
# BLOWHOME=/usr/share/blow

set -x

if test -z $BLOWHOME; then
   BLOW=`which blow`
   BLOWHOME=`dirname $BLOW`
fi

java -jar $BLOWHOME/lib/winstone-0.9.10.jar --useJasper --httpPort=9999 --ajpPort=-1 --commonLibFolder=$BLOWHOME/lib `dirname $0`/../app
RETVAL=$?

exit $RETVAL
